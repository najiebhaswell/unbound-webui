#!/bin/sh
set -e

if [ "$1" = "configure" ]; then
    # Create data directory
    mkdir -p /opt/unbound-webui/data
    
    # Set permissions
    chmod 755 /opt/unbound-webui
    chmod 755 /opt/unbound-webui/app.py
    
    # Enable and start service
    systemctl daemon-reload
    systemctl enable unbound-webui.service || true
    systemctl start unbound-webui.service || true
    
    echo ""
    echo "============================================"
    echo "  Unbound Web UI installed successfully!"
    echo "============================================"
    echo ""
    echo "  Access: http://localhost:8888"
    echo "  Login:  admin / admin"
    echo ""
    echo "  Change password after first login!"
    echo "============================================"
fi

# Automatically added by dh_systemd_enable/13.11.4
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	# The following line should be removed in trixie or trixie+1
	deb-systemd-helper unmask 'unbound-webui.service' >/dev/null || true

	# was-enabled defaults to true, so new installations run enable.
	if deb-systemd-helper --quiet was-enabled 'unbound-webui.service'; then
		# Enables the unit on first installation, creates new
		# symlinks on upgrades if the unit file has changed.
		deb-systemd-helper enable 'unbound-webui.service' >/dev/null || true
	else
		# Update the statefile to add new symlinks (if any), which need to be
		# cleaned up on purge. Also remove old symlinks.
		deb-systemd-helper update-state 'unbound-webui.service' >/dev/null || true
	fi
fi
# End automatically added section
# Automatically added by dh_systemd_start/13.11.4
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -d /run/systemd/system ]; then
		systemctl --system daemon-reload >/dev/null || true
		if [ -n "$2" ]; then
			_dh_action=restart
		else
			_dh_action=start
		fi
		deb-systemd-invoke $_dh_action 'unbound-webui.service' >/dev/null || true
	fi
fi
# End automatically added section

